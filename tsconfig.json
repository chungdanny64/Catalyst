{
  "compilerOptions": {
    "target": "esNext",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "dom.iterable"
    ],
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["./src/"]
}

// can also add this to the include file instead of adding a type root
// include: ['./src/', 'typings']